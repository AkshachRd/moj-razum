{
    "$schema": "../gen/schemas/desktop-schema.json",
    "identifier": "default",
    "description": "enables the default permissions",
    "windows": ["main"],
    "permissions": [
        "core:default",
        { "identifier": "core:path:allow-resolve-directory" },
        { "identifier": "dialog:default" },
        { "identifier": "dialog:allow-open" },
        {
            "identifier": "fs:allow-write-text-file",
            "allow": [{ "path": "$APP_DATA/**" }, { "path": "$RUNTIME/**" }]
        },
        {
            "identifier": "fs:allow-read-text-file",
            "allow": [{ "path": "$APP_DATA/**" }, { "path": "$RUNTIME/**" }]
        },
        {
            "identifier": "fs:allow-read-dir",
            "allow": [{ "path": "$APP_DATA/**" }, { "path": "$RUNTIME/**" }]
        },
        {
            "identifier": "fs:allow-exists",
            "allow": [{ "path": "$APP_DATA/**" }, { "path": "$RUNTIME/**" }]
        },
        {
            "identifier": "fs:allow-mkdir",
            "allow": [{ "path": "$APP_DATA/**" }, { "path": "$RUNTIME/**" }]
        },
        {
            "identifier": "fs:allow-remove",
            "allow": [{ "path": "$APP_DATA/**" }, { "path": "$RUNTIME/**" }]
        },
        { "identifier": "fs:scope-appdata-recursive" },
        { "identifier": "fs:allow-appdata-read-recursive" },
        { "identifier": "fs:allow-appdata-write-recursive" },
        { "identifier": "fs:allow-appdata-meta-recursive" }
    ]
}
