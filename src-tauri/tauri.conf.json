{
    "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
    "productName": "mentem",
    "version": "0.1.0",
    "identifier": "com.mentem.app",
    "build": {
        "frontendDist": "../out",
        "devUrl": "http://localhost:4250",
        "beforeDevCommand": "npm run dev",
        "beforeBuildCommand": "npm run build"
    },
    "app": {
        "windows": [
            {
                "title": "Mentem",
                "width": 800,
                "height": 600,
                "resizable": true,
                "fullscreen": false
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    },
    "plugins": {
        "deep-link": {
            "desktop": {
                "schemes": ["mentem"]
            }
        }
    }
}
